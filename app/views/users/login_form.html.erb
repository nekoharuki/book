<h1>ログイン</h1>

<%= form_tag("/login",method: :post) do %>
  <p>
    <label for="email">Eメール:</label>
    <input type="email" name="email" id="email" title="メールアドレスを入力してください"  placeholder="メールアドレス" value="<%=@email%>" required>
  </p>
  <p>
    <label for="password">パスワード:</label>
    <input type="password" name="password" id="password" title="パスワードを入力してください"  placeholder="パスワード" value="<%=@password%>" required>
  </p>
  <input type="submit" value="ログイン">
<% end %>