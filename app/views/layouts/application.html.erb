<!DOCTYPE html>
<html>
  <head>
    <title>ITぶつぶつ園</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <% if session[:user_id] %>
      <%= link_to("商品一覧", "/items/index") %>
      <%= link_to("出品一覧", "/users/#{HASHIDS.encode(@current_user.id)}/items") %>
      <%= link_to("いいねした商品", "/items/like") %>
      <%= link_to("出品", "/items/new") %>
      <%= link_to("カテゴリー", "/items/categorize") %>
      <%= link_to("出版社", "/items/publishers") %>
      <%= link_to("作者", "/items/authors") %>
      <%= link_to("交換完了明細", "/items/details") %>
      <%= link_to("ユーザー一覧", "/users/index") %>
      <%= link_to("ユーザー情報詳細", "/users/#{HASHIDS.encode(@current_user.id)}") %>
      <%= link_to("ログアウト", "/logout", data: { turbo_method: "post" }) %>
      <% else %>
      <%= link_to("ホーム", "/") %>
      <%= link_to("アプリの説明", "/about") %>
      <%= link_to("ログイン", "/login") %>
      <%= link_to("新規登録", "/users/new") %>
    <% end %>
  </head>

  <body>
    <br>
    <br>
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>
    <% if flash[:alert] %>
      <%= flash[:alert] %>
    <% end %>
    <%= yield %>
  </body>
</html>
