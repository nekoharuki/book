<h1>商品一覧</h1>
<%@items.each do |item|%>

<%=link_to(item.name,"/items/#{item.id}")%>

<% if like=Like.find_by(item_id: item.id,user_id: @current_user.id)%>
<%=link_to("いいね済み","/likes/destroy/#{item.id}/#{@current_user.id}",data: { turbo_method: "post" })%>
<%elsif(@current_user.id!=item.user_id)%>
<%=link_to("いいね","/likes/create/#{item.id}/#{@current_user.id}",data: { turbo_method: "post" })%>
<%end%>
<%sum=Like.where(item_id: item.id).count%>
<%=sum%>
<br>
<%end%>
