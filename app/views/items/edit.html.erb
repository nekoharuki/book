<h1>出品編集</h1>

<%= form_tag("/items/#{@item.id}/update",method: :post) do %>

    <p>
        <label for="name">タイトル:</label>
        <input type="text" name="name" id="name" title="タイトルを入力してください" placeholder="タイトル" value="<%=@item.name%>"  required>
    </p>
    <p>
        <label for="author">作者:</label>
        <input type="text" name="author" id="author" title="作者を入力してください" placeholder="作者" value="<%=@item.author%>"  required>
    </p>
    <p>
        <label for="publisher">出版社:</label>
        <input type="text" name="publisher" id="publisher" title="出版社を入力してください" placeholder="出版社" value="<%=@item.publisher%>" required>
    </p>
    <p>
        <label for="content">内容:</label>
        <textarea id="content" name="content" rows="4" cols="50" minlength="30" maxlength="500" placeholder="内容を入力してください" required><%=@item.content%></textarea>
    </p>

  <div>
    <label for="situation">状態</label>
    <select name="situation" id="situation">
      <option <%= "selected" if @item.situation=="良い" %> value="良い">良い</option>
      <option <%= "selected" if @item.situation=="普通" %> value="普通">普通</option>
      <option <%= "selected" if @item.situation=="悪い" %> value="悪い">悪い</option>
    </select>
  </div> 

    <p>
        <label for="category">カテゴリー:</label>
        <input type="text" name="category" id="category" title="カテゴリーを入力してください" placeholder="状態" value="<%=@item.category%>" required>
    </p>
    <p>
        <label for="image">画像:</label>
        <input type="text" name="image" id="image" title="画像を入力してください" placeholder="画像" value="<%=@item.image%>" required>
    </p>
        <input type="submit" value="投稿" >

<% end %>