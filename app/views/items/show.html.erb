<div class="row">
  <div class="col-6">
    <img src="<%= @item.image.url %>" class="card-img-top" alt="本の画像">
    <div class="card-body">
      <h5 class="card-title"><%= @item.title %></h5>
      <p class="card-text"><%= @item.content %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= @item.author %></li>
      <li class="list-group-item"><%= @item.publisher %></li>
      <li class="list-group-item"><%= @item.condition %></li>
      <li class="list-group-item"><%= @item.recommend_point %></li>
      <li class="list-group-item"><%= @item.help_point %></li>
      <li class="list-group-item"><%= @item.learn_point %></li>
      <li class="list-group-item"><%= @item.category %></li>
      <li class="list-group-item"><%= @item.user.name %></li>
    </ul>
    <div class="card-body">
      <% if @current_user.id == @item.user.id %>
        <%= link_to "編集", "/items/#{@hashids.encode(@item.id)}/edit", class: "btn btn-success" %>
        <%= link_to "削除", "/items/#{@hashids.encode(@item.id)}/destroy_form", class: "btn btn-danger" %>
      <% else %>
        <%= link_to "この商品に物々交換リクエストする", "/items/#{@hashids.encode(@item.id)}/trade_items", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="col-6">
    <%= render "reviews/items_show" %>
    <%= render "items/trades" %>
  </div>
</div>