<h1>評価編集</h1>

<%=form_tag("/reviews/#{@hashids.encode(@review.item_id)}/#{@hashids.encode(@review.id)}/update",method: :post) do%>
<p>
    <label for="point">評価:</label>
    <input type="range" id="point" name="point" max="5" min="1" value="<%=@review.point%>" required>
</p>
    <p>
        <label for="comment">コメント:</label>
        <textarea id="comment" name="comment" rows="4" cols="50" minlength="20" maxlength="100" placeholder="コメントを入力してください" required><%=@review.comment%></textarea>
    </p>
<input type="submit" value="投稿">
<% end %>
